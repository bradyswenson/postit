<% @posts.each do |post| %>
<div class="row">
  <div class="span8 well">
  <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <small class='quiet'>posted by</small> <%= post.creator.username %>
      <small>at <%= format_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
<% end %>